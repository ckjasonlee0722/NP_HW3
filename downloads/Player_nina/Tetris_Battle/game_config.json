{
    "meta": {
        "game_name": "Tetris_Battle",
        "version": "1.0.10",
        "author": "XiaoBango",
        "description": "經典雙人俄羅斯方塊對戰",
        "min_players": 2,
        "max_players": 2
    },
    "execution": {
        "server": {
            "executable": "python",
            "script": "server/game_server.py",
            "arguments": {
                "port": "--port",
                "room_id": "--room-id",
                "users": "--users",
                "mode": "--mode",
                "drop_ms": "--drop-ms"
            },
            "custom_args": {
                "host": "0.0.0.0"
            }
        },
        "client": {
            "executable": "python",
            "script": "client/game_client.py",
            "arguments": {
                "ip": "--host",
                "port": "--port",
                "user_id": "--user-id",
                "role": "--role"
            }
        }
    }
}